---
import ArrowRightIcon from '../icons/ArrowRight.astro'

interface Props {
  date: string
  title: string
  company: string
  description: string[]
  link?: string
}

const { date, title, company, description, link } = Astro.props
---

<div
  class='absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white'
>
</div>

<div class='gap-6 grid grid-cols-[repeat(auto-fit,minmax(240px,1fr))]'>
  <div class='grid gap-1 content-start justify-items-start'>
    <time class='text-orange-200'>
      {date}
    </time>

    <h3 class='text-xl font-semibold text-red-400'>
      {title}
    </h3>

    <h4 class='text-lg font-semibold'>{company}</h4>

    {
      link && (
        <a
          class='flex items-center gap-1 text-sm hover:text-red-300'
          href={link}
          rel='noopemer noreferrer'
          target='_blank'
        >
          Sitio web <ArrowRightIcon class='size-4' />
        </a>
      )
    }
  </div>

  <ol class='pl-5 text-gray-200 text-pretty list-disc'>
    {description.map((item) => <li>{item}</li>)}
  </ol>
</div>
