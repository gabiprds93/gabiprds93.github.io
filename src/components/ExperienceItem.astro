---
import ArrowRightIcon from "@/icons/ArrowRight.astro"

interface Props {
  date: string
  title: string
  company: string
  description: string[]
  link?: string
}

const { date, title, company, description, link } = Astro.props
---

<div
  class="absolute -start-1.5 mt-1.5 h-3 w-3 rounded-full border border-white bg-gray-200"
>
</div>

<div class="grid grid-cols-[repeat(auto-fit,minmax(240px,1fr))] gap-6">
  <div class="grid content-start justify-items-start gap-1">
    <time class="text-orange-200">
      {date}
    </time>

    <h3 class="text-xl font-semibold text-red-400">
      {title}
    </h3>

    <h4 class="text-lg font-semibold">{company}</h4>

    {
      link && (
        <a
          class="flex items-center gap-1 text-sm hover:text-red-300"
          href={link}
          rel="noopemer noreferrer"
          target="_blank"
        >
          Sitio web <ArrowRightIcon class="size-4" />
        </a>
      )
    }
  </div>

  <ol class="list-disc text-pretty pl-5 text-gray-200">
    {description.map((item) => <li>{item}</li>)}
  </ol>
</div>
