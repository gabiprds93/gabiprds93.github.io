---
import ArrowRightIcon from '../icons/ArrowRight.astro'

interface Props {
  date: string
  title: string
  company: string
  description: string[]
  link?: string
}

const { date, title, company, description, link } = Astro.props
---

<div
  class='absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white'
>
</div>

<h3 class='text-lg font-semibold text-yellow-200 mt-2'>
  {title}
</h3>

<h4 class='mb-1 text-md font-normal text-white'>{company}</h4>

<time class='mb-1 text-sm font-normal leading-none text-sky-200/80'>
  {date}
</time>

<ol class='ml-5 mb-4 text-base font-normal text-gray-200 text-pretty list-disc'>
  {description.map((item) => <li>{item}</li>)}
</ol>

{
  link && (
    <a
      class='inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100  focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-200'
      href={link}
      target='_blank'
      rel='noopener noreferrer'
    >
      Saber m√°s <ArrowRightIcon class='size-5' />
    </a>
  )
}
