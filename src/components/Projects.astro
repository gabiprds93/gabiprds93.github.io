---
import LinkButton from "./LinkButton.astro"
import GitHubIcon from "@/icons/GitHubIcon.astro"
import WebIcon from "@/icons/WebIcon.astro"
import { PROJECTS } from "@/constants"
---

<div class="grid gap-10">
  {
    PROJECTS.map(({ title, description, tags, image, link, github }) => (
      <article class="grid grid-cols-[repeat(auto-fit,minmax(270px,1fr))] gap-4">
        <div class="grid items-start gap-2">
          <h3 class="text-2xl font-semibold text-red-400">{title}</h3>

          <ul class="flex flex-wrap gap-2">
            {tags.map((tag) => (
              <li
                class={`flex gap-2 rounded-full px-2 py-1 text-xs ${tag.class}`}
              >
                <tag.icon class="size-4" /> {tag.name}
              </li>
            ))}
          </ul>

          <p class="text-pretty text-gray-200">{description}</p>

          <div class="flex gap-4">
            <LinkButton href={github}>
              <GitHubIcon class="size-6" /> Repositorio
            </LinkButton>

            <LinkButton href={link}>
              <WebIcon class="size-6" /> Demo
            </LinkButton>
          </div>
        </div>

        <img
          loading="lazy"
          class="rounded shadow-2xl shadow-white/10"
          src={image}
          alt={`Captura de pantalla del proyecto ${title}`}
        />
      </article>
    ))
  }
</div>
