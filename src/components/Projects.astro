---
import Github from '@/icons/Github.astro'
import WebIcon from '@/icons/WebIcon.astro'
import LinkButton from './LinkButton.astro'
import { PROJECTS } from '@/constants'
---

{
  PROJECTS.map(({ title, description, tags, image, link, github }) => (
    <article class='text-white'>
      <h3 class='text-2xl font-semibold text-yellow-200 mb-2'>{title}</h3>

      <p class='text-lg mb-4 text-pretty'>{description}</p>

      <ul class='flex gap-2'>
        {tags.map((tag) => (
          <li class={`flex gap-2 rounded-full text-xs py-1 px-2 ${tag.class}`}>
            <tag.icon class='size-4' /> {tag.name}
          </li>
        ))}
      </ul>

      <img
        loading='lazy'
        class='rounded shadow-2xl shadow-white/10'
        src={image}
        alt={`Captura de pantalla del proyecto ${title}`}
      />

      <div class='flex gap-4 mt-2'>
        <LinkButton href={github}>
          <Github class='size-6' /> Ver c√≥digo fuente
        </LinkButton>

        <LinkButton href={link}>
          <WebIcon class='size-6' /> Ir al sitio web
        </LinkButton>
      </div>
    </article>
  ))
}
